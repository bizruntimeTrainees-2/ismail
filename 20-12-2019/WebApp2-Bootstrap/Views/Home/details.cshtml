@model HomeDetailsViewModel;

@{
    ViewBag.Title = "Employees List";
}
<h3>@Model.PageTitle</h3>
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/1.jpg" />
                <h4> Employee Id: @Model.Employee.Id</h4>
                <h4> Email: @Model.Employee.Email</h4>
                <h4> Department: @Model.Employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary small">Back</a>
                <a href="#" class="btn btn-primary small">Edit</a>
                <a href="#" class="btn btn-danger small">Delete</a>
            </div>
        </div>
    </div>
</div>

@section  Scripts
{ 
    <script src="~/js/CustomScript.js"></script>
}
